<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cozyspace.librarymanagement.controller.game.GameScreenController">

    <top>
        <HBox alignment="TOP_LEFT" spacing="10">
            <Label fx:id="highscoreLabel" text="Highscore: 0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="exitButton" text="Thoát game" onAction="#handleExitButton" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="Đoán Tên Sách" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <Label fx:id="descriptionLabel" text="Mô tả của tài liệu" wrapText="true" style="-fx-font-size: 16px;" />
            <TextField fx:id="guessTextField" promptText="Nhập câu trả lời..." />
            <Button fx:id="submitButton" text="Submit" onAction="#handleSubmitButton" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
            <Button fx:id="nextButton" text="Next" onAction="#handleNextButton" disable="true" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
            <Button fx:id="skipButton" text="Bỏ qua" onAction="#handleSkipButton" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
            <Label fx:id="scoreLabel" text="Điểm: 0" style="-fx-font-size: 28px; -fx-font-weight: bold;" />

        </VBox>
    </center>

    <bottom>
        <HBox alignment="BOTTOM_LEFT" spacing="10" style="-fx-padding: 10;">
            <Label fx:id="timeLabel" text="Thời gian: 0 giây" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
    </bottom>
</BorderPane>
