<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="documentMainScreen" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cozyspace.librarymanagement.controller.librarian.document.DocumentMainScreenController"
            prefHeight="400.0" prefWidth="600.0">
    <left>
        <AnchorPane style="-fx-background-color:#0e4ed5">
            <Button fx:id="showAllDocumentButton" layoutY="15.0" prefHeight="45.0" prefWidth="160"
                    text="Tất cả tài liệu" onAction="#showAllDocument">
                <font>
                    <Font size="20"/>
                </font>
            </Button>
            <Button fx:id="showAllAvailableDocumentButton" layoutY="60.0" prefHeight="45.0" prefWidth="160"
                    text="Tài liệu hiện có" onAction="#showAllAvailableDocument">
                <font>
                    <Font size="20"/>
                </font>
            </Button>
            <Button fx:id="showAllUnavailableDocumentButton" layoutY="105.0" prefHeight="45.0" prefWidth="160"
                    text="Tài liệu đã hết" onAction="#showAllUnavailableDocument">
                <font>
                    <Font size="20"/>
                </font>
            </Button>
        </AnchorPane>
    </left>
</BorderPane>
