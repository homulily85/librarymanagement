                  text="Kết quả tìm kiếm" textAlignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12"
                  xmlns:fx="http://javafx.com/fxml/1">
                <font>
                    <Font name="Verdana" size="35.0"/>
                </font>
            </Text>
            <AnchorPane layoutX="613.0" layoutY="14.0" prefHeight="102.0" prefWidth="442.0"
                        xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
                <Text fx:id="nameLabel" layoutX="90.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Name"
                      wrappingWidth="228.1830234527588">
                    <font>
                        <Font name="Verdana" size="15.0"/>
                    </font>
                </Text>
