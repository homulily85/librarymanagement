<AnchorPane fx:id="pane" prefHeight="600.0" prefWidth="1100.0" stylesheets="@../../css/login.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cozyspace.librarymanagement.controller.login.LoginPhase1Controller">
    <children>
        <Pane layoutX="550.0" prefHeight="602.0" prefWidth="550.0" style="-fx-background-color: #393e41;" />
        <Pane prefHeight="600.0" prefWidth="550.0" style="-fx-background-color: #fdffe0;" />
        <HBox layoutX="50.0" layoutY="50.0" prefHeight="500.0" prefWidth="1000.0">
            <children>
                <VBox fx:id="leftSection" alignment="CENTER" prefHeight="500.0" prefWidth="500.0" HBox.hgrow="ALWAYS">
                    <children>
                        <ImageView fitHeight="134.0" fitWidth="111.0">
                            <Image url="@../../icon/program_icon.png" />
                            <VBox.margin>
                                <Insets bottom="50.0" right="250.0" top="-170.0" />
                            </VBox.margin>
                        </ImageView>
                        <Label fx:id="wel_title" prefHeight="35.0" prefWidth="332.0" text="Xin chào!">
                            <font>
                                <Font size="40" />
                            </font>
                            <VBox.margin>
                                <Insets top="-10.0" />
                            </VBox.margin>
                        </Label>
                        <Label fx:id="wel_subTitle" prefHeight="71.0" prefWidth="354.0" text="Hãy nhập tên đăng nhập tài khoản của bạn" wrapText="true">
                            <font>
                                <Font size="15" />
                            </font>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </Label>
                    </children>
                    <effect>
                        <DropShadow />
                    </effect>
                </VBox>
                <VBox fx:id="rightSection" alignment="CENTER" prefHeight="500.0" prefWidth="500.0" HBox.hgrow="ALWAYS">
                    <children>
                        <GridPane alignment="CENTER" prefHeight="166.0" prefWidth="469.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label id="title" fx:id="nameAccount" alignment="CENTER" prefHeight="42.0" prefWidth="299.0" text="Tên đăng nhập" textAlignment="CENTER">
                                    <font>
                                        <Font size="15" />
                                    </font>
                                </Label>
                                <Pane prefHeight="67.0" prefWidth="213.0" GridPane.columnIndex="1">
                                    <children>
                                        <TextField fx:id="usernameField" alignment="CENTER" layoutY="16.0" prefHeight="46.0" prefWidth="230.0">
                                            <opaqueInsets>
                                                <Insets />
                                            </opaqueInsets>
                                            <padding>
                                                <Insets top="10.0" />
                                            </padding>
                                        </TextField>
                                    </children>
                                    <padding>
                                        <Insets top="10.0" />
                                    </padding></Pane>
                                <Label id="title" fx:id="passwordAccount" alignment="CENTER" prefHeight="28.0" prefWidth="356.0" text="Mật khẩu" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="15" />
                                    </font>
                                </Label>
                                <Pane prefHeight="78.0" prefWidth="163.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <children>
                                        <TextField fx:id="passwordField" alignment="CENTER" layoutY="12.0" prefHeight="46.0" prefWidth="230.0" />
                                    </children>
                                </Pane>
                            </children>
                            <VBox.margin>
                                <Insets top="150.0" />
                            </VBox.margin>
                        </GridPane>
                        <Label fx:id="loginFailedPrompt" text="Tên đăng nhập không tồn tại" textFill="#e40c0c" visible="false">
                            <font>
                                <Font size="12" />
                            </font>
                        </Label>
                        <Label fx:id="inputPrompt" text="Hãy nhập tên đăng nhập của bạn" textFill="#e40c0c" visible="false">
                            <font>
                                <Font size="12" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="87.0" prefWidth="500.0" spacing="80.0">
                            <children>
                                <Button fx:id="forgotButton" onAction="#changeToCreateNewAccount" prefHeight="46.0" prefWidth="146.0" text="Quên mật khẩu">
                                    <font>
                                        <Font size="15" />
                                    </font>
                                </Button>
                                <Button fx:id="signInButton" defaultButton="true" lineSpacing="30.0" onAction="#checkAndContinue" prefHeight="42.0" prefWidth="126.0" text="Đăng nhập">
                                    <font>
                                        <Font size="15" />
                                    </font>
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="35.0" />
                            </VBox.margin>
                        </HBox>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <effect>
                        <DropShadow />
                    </effect>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
